FROM mcr.microsoft.com/dotnet/runtime:6.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["Collections.csproj", "./"]
RUN dotnet restore "Collections.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "Collections.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Collections.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Collections.dll"]
